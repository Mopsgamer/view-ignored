{
  "$schema": "https://unpkg.com/release-it@19/schema/release-it.json",
  "hooks": {
    "before:init": "bun prerelease"
  },
  "plugins": {
    "@release-it/keep-a-changelog": {
      "filename": "CHANGELOG.md"
    }
  },
  "github": {
    "release": true,
    "draft": false,
    "releaseName": "${version}",
    "skipChecks": true
  },
  "npm": {
    "publish": true,
    "skipChecks": true
  },
  "git": {
    "requireBranch": "main"
  }
}
