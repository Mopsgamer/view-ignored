  "version": "0.2.0",
  "configurations": [
    {
      "name": "tests",
      "type": "node",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "args": [
        "--test",
        "./out/**/*.test.js"
      ],
      "console": "integratedTerminal",
      "sourceMaps": true,
    },
    {
      "type": "node",
      "request": "launch",
      "name": "viewig scan --parsable",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "args": [
        "scan",
        "--parsable"
      ],
      "console": "integratedTerminal",
      "program": "${workspaceFolder}/bin/viewig",
      "cwd": "${workspaceFolder}",
      "sourceMaps": true,
    },
    {
      "type": "node",
      "request": "launch",
      "name": "viewig scan",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "args": [
        "scan"
      ],
      "console": "integratedTerminal",
      "program": "${workspaceFolder}/bin/viewig",
      "cwd": "${workspaceFolder}",
      "sourceMaps": true,
    },
    {
      "type": "node",
      "request": "launch",
      "name": "viewig scan --sort=modified",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "args": [
        "scan",
        "--sort=modified",
      ],
      "console": "integratedTerminal",
      "program": "${workspaceFolder}/bin/viewig",
      "cwd": "${workspaceFolder}",
      "sourceMaps": true,
    },
    {
      "type": "node",
      "request": "launch",
      "name": "viewig scan --target=npm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "args": [
        "scan",
        "--target=npm",
      ],
      "console": "integratedTerminal",
      "program": "${workspaceFolder}/bin/viewig",
      "cwd": "${workspaceFolder}",
      "sourceMaps": true,
    },
    {
      "type": "node",
      "request": "launch",
      "name": "viewig scan --plugins=t",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "args": [
        "scan",
        "--plugins=t",
      ],
      "console": "integratedTerminal",
      "program": "${workspaceFolder}/bin/viewig",
      "cwd": "${workspaceFolder}",
      "sourceMaps": true,
    },
  ]
}