	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Launch command line",
			"skipFiles": [
				"<node_internals>/**"
			],
			"internalConsoleOptions": "neverOpen",
			"program": "${workspaceFolder}\\lib\\bin.js",
			"cwd": "${workspaceFolder}",
			"outFiles": [
				"${workspaceFolder}/lib/*.js"
			],
			"preLaunchTask": "Build",
		}
	]
}