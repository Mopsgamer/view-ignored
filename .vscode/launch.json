  "version": "0.2.0",
  "configurations": [
    {
      "name": "go run . scan -target git",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": ".",
      "args": ["scan", "-target", "git"],
      "presentation": {
        "hidden": false,
        "group": "go",
        "order": 1
      }
    },
    {
      "name": "go run . scan -target npm",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": ".",
      "args": ["scan", "-target", "npm"],
      "presentation": {
        "hidden": false,
        "group": "go",
        "order": 1
      }
    },
    {
      "name": "tests",
      "type": "node",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "args": [
        "--test",
        "./out/**/*.test.js"
      ],
      "console": "integratedTerminal",
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "viewig scan --parsable",
      "skipFiles": [
        "<node_internals>/**"
      ],
