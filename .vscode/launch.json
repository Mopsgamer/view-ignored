{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "mocha",
			"skipFiles": [
				"<node_internals>/**"
			],
			"args": [
				"--require",
				"tsx",
				"./test/**/*.test.ts"
			],
			"program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
		},
		{
			"type": "node",
			"request": "launch",
			"name": "viewig scan",
			"skipFiles": [
				"<node_internals>/**"
			],
			"args": [
				"scan"
			],
			"internalConsoleOptions": "neverOpen",
			"program": "${workspaceFolder}/src/bin.ts",
			"cwd": "${workspaceFolder}",
			"outFiles": [
				"${workspaceFolder}/lib/**/*.js"
			],
			"preLaunchTask": "Build",
			"sourceMaps": true
		},
		{
			"type": "node",
			"request": "launch",
			"name": "viewig scan - npm all",
			"skipFiles": [
				"<node_internals>/**"
			],
			"args": [
				"scan",
				"--target=npm",
				"--filter=all",
			],
			"internalConsoleOptions": "neverOpen",
			"program": "${workspaceFolder}/src/bin.ts",
			"cwd": "${workspaceFolder}",
			"outFiles": [
				"${workspaceFolder}/lib/**/*.js"
			],
			"preLaunchTask": "Build",
			"sourceMaps": true
		},
	]
}