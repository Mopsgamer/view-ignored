{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "mocha",
			"skipFiles": [
				"<node_internals>/**"
			],
			"args": [
				"./out/test/**/*.test.js"
			],
			"program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
			"sourceMaps": true,
		},
		{
			"type": "node",
			"request": "launch",
			"name": "viewig scan",
			"skipFiles": [
				"<node_internals>/**"
			],
			"args": [
				"scan"
			],
			"program": "${workspaceFolder}/out/src/bin.js",
			"cwd": "${workspaceFolder}",
			"sourceMaps": true,
		},
		{
			"type": "node",
			"request": "launch",
			"name": "viewig scan --target npm",
			"skipFiles": [
				"<node_internals>/**"
			],
			"args": [
				"scan",
				"--target=npm",
			],
			"program": "${workspaceFolder}/out/src/bin.js",
			"cwd": "${workspaceFolder}",
			"sourceMaps": true,
		},
		{
			"type": "node",
			"request": "launch",
			"name": "viewig scan --plugin t",
			"skipFiles": [
				"<node_internals>/**"
			],
			"args": [
				"scan",
				"--plugin",
				"t"
			],
			"program": "${workspaceFolder}/out/src/bin.js",
			"cwd": "${workspaceFolder}",
			"sourceMaps": true,
		},
	]
}