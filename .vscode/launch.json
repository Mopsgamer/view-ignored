	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "viewig scan",
			"skipFiles": [
				"<node_internals>/**"
			],
			"args": [
				"scan"
			],
			"internalConsoleOptions": "neverOpen",
			"program": "${workspaceFolder}/lib/bin.js",
			"cwd": "${workspaceFolder}",
			"outFiles": [
				"${workspaceFolder}/lib/*.js"
			],
			"preLaunchTask": "Build",
		},
		{
			"type": "node",
			"request": "launch",
			"name": "viewig scan - npm all",
			"skipFiles": [
				"<node_internals>/**"
			],
			"args": [
				"scan",
				"--target=npm",
				"--filter=all",
			],
			"internalConsoleOptions": "neverOpen",
			"program": "${workspaceFolder}/lib/bin.js",
			"cwd": "${workspaceFolder}",
			"outFiles": [
				"${workspaceFolder}/lib/*.js"
			],
			"preLaunchTask": "Build",
		}
	]
}