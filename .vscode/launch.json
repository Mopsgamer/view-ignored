	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Launch command line: -st treeNerd -sr firstFolders",
			"skipFiles": [
				"<node_internals>/**"
			],
			"args": [
				"-st",
				"treeNerd",
				"-sr",
				"firstFolders"
			],
			"internalConsoleOptions": "neverOpen",
			"program": "${workspaceFolder}\\lib\\bin.js",
			"cwd": "${workspaceFolder}",
			"outFiles": [
				"${workspaceFolder}/lib/*.js"
			],
			"preLaunchTask": "Build nobin",
		}
	]
}