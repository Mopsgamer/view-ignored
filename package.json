{
	"name": "view-ignored",
	"version": "0.5.2",
	"description": "Retrieve list of files ignored/included by Git, NPM, Yarn, JSR, VSCE or other tools.",
	"keywords": [
		".gitignore",
		".npmignore",
		".vscodeignore",
		".yarnignore",
		"file",
		"files",
		"fs",
		"gitignore",
		"ignore",
		"ignorefile",
		"ls-tree",
		"match",
		"migration",
		"npmignore",
		"tree",
		"vscodeignore",
		"yarnignore"
	],
	"bugs": {
		"url": "https://github.com/Mopsgamer/view-ignored/issues"
	},
	"license": "MIT",
	"author": "Mopsgamer",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Mopsgamer/view-ignored.git"
	},
	"directories": {
		"lib": "out"
	},
	"files": [
		"/out"
	],
	"type": "module",
	"exports": {
		".": {
			"types": "./out/index.d.ts",
			"default": "./out/index.js"
		},
		"./scan": {
			"types": "./out/scan.d.ts",
			"default": "./out/scan.js"
		},
		"./stream": {
			"types": "./out/stream.d.ts",
			"default": "./out/stream.js"
		},
		"./browser": {
			"types": "./out/browser.d.ts",
			"default": "./out/browser.js"
		},
		"./browser/scan": {
			"types": "./out/browser_scan.d.ts",
			"default": "./out/browser_scan.js"
		},
		"./browser/stream": {
			"types": "./out/browser_stream.d.ts",
			"default": "./out/browser_stream.js"
		},
		"./patterns": {
			"types": "./out/patterns/index.d.ts",
			"default": "./out/patterns/index.js"
		},
		"./targets": {
			"types": "./out/targets/index.d.ts",
			"default": "./out/targets/index.js"
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"prerelease": "bun run test && bun run build:prod && bun run lint && bun run fmt --check",
		"test": "bun run build && node --enable-source-maps --test out/**/*.test.js",
		"test:patterns": "bun run build && node --enable-source-maps --test out/patterns/**/*.test.js",
		"test:targets": "bun run build && node --enable-source-maps --test out/targets/**/*.test.js",
		"test:noself": "bun run build && node --enable-source-maps --test-skip-pattern self --test out/**/*.test.js",
		"test:self:git": "bun run build && node --enable-source-maps --test out/scan_self_git.test.js",
		"test:self:npm": "bun run build && node --enable-source-maps --test out/scan_self_npm.test.js",
		"lint": "bun run oxlint --type-aware",
		"fmt": "bun run oxfmt",
		"check": "bun tsgo -p . --noEmit",
		"build": "rm -rf out && bun tsgo -p .",
		"build:prod": "rm -rf out && tsgo -p tsconfig.prod.json",
		"release:major": "bun run release-it --increment=major",
		"release:minor": "bun run release-it --increment=minor",
		"release:patch": "bun run release-it --increment=patch"
	},
	"dependencies": {
		"arktype": "^2.1.29",
		"minimatch": "^10.1.1",
		"strip-json-comments": "^5.0.3"
	},
	"devDependencies": {
		"@release-it/keep-a-changelog": "^7.0.0",
		"@types/node": "22",
		"@typescript/native-preview": "^7.0.0-dev.20251214.1",
		"memfs": "link:memfs",
		"oxfmt": "^0.19.0",
		"oxlint": "^1.34.0",
		"oxlint-tsgolint": "^0.9.2",
		"release-it": "^19.1.0"
	},
	"engines": {
		"node": ">=18"
	}
}
