{
	"name": "view-ignored",
	"version": "0.0.0",
	"description": "Get a list of ignored files by targets: git, npm, yaml, docker, ... .",
	"type": "module",
	"bin": {
		"viewig": "./bin/viewig",
		"view-ignored": "./bin/viewig"
	},
	"scripts": {
		"prerelease": "pnpm lint && pnpm test",
		"pretest": "pnpm build",
		"test": "pnpm mocha --require tsx ./test/**/*.test.ts",
		"build": "pnpm tsc && pnpm build:bin",
		"build:nobin": "pnpm tsc",
		"build:bin": "npx esbuild ./src/bin.ts --bundle --packages=external --platform=node --target=node18 --format=esm --outfile=./bin/viewig",
		"lint": "pnpm eslint .",
		"lint:fix": "pnpm eslint . --fix",
		"release:major": "pnpm release-it --increment=major",
		"release:minor": "pnpm release-it --increment=minor",
		"release:patch": "pnpm release-it --increment=patch"
	},
	"pre-push": [
		"prerelease"
	],
	"author": "Mopsgamer",
	"license": "ISC",
	"main": "./lib/index.js",
	"files": [
		"lib"
	],
	"release-it": {
		"hooks": {
			"before:init": "pnpm prerelease"
		},
		"plugins": {
			"@release-it/keep-a-changelog": {
				"filename": "CHANGELOG.md"
			}
		},
		"github": {
			"release": true,
			"draft": true,
			"releaseName": "${version}"
		},
		"npm": {
			"publish": true
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"directories": {
		"test": "test"
	},
	"dependencies": {
		"chalk": "^5.3.0",
		"commander": "^12.0.0",
		"fast-glob": "^3.3.2",
		"get-value": "^3.0.1",
		"ignore": "^5.3.1",
		"jsonify-paths": "^1.1.0",
		"treeify": "^1.1.0",
		"tslib": "^2.6.2"
	},
	"devDependencies": {
		"@eslint/js": "^9.2.0",
		"@release-it/keep-a-changelog": "^5.0.0",
		"@types/get-value": "^3.0.5",
		"@types/mocha": "^10.0.6",
		"@types/node": "^20.12.11",
		"@types/treeify": "^1.0.3",
		"esbuild": "^0.21.4",
		"eslint": "^8.57.0",
		"eslint-plugin-only-warn": "^1.1.0",
		"globals": "^15.2.0",
		"mocha": "^10.4.0",
		"pre-push": "^0.1.4",
		"release-it": "^17.2.1",
		"tsx": "^4.10.2",
		"typescript": "^5.4.5",
		"typescript-eslint": "^7.9.0"
	},
	"keywords": [
		"tree",
		"ignore",
		"gitignore",
		"npmignore",
		"dockerignore",
		"cli",
		"fs",
		"file-system",
		"output",
		"project",
		"migration"
	]
}
