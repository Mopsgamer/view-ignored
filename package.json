{
	"name": "view-ignored",
	"version": "0.0.0",
	"description": "Retrieve lists of files ignored by Git, npm, Yarn, Docker, and more with ease.",
	"type": "module",
	"bin": {
		"viewig": "./bin/viewig",
		"view-ignored": "./bin/viewig"
	},
	"scripts": {
		"prerelease": "pnpm lint && pnpm test && pnpm build",
		"test": "pnpm mocha --require tsx ./test/**/*.test.ts",
		"build": "pnpm tsc",
		"lint": "pnpm eslint .",
		"lint:fix": "pnpm eslint . --fix",
		"release:major": "pnpm release-it --increment=major",
		"release:minor": "pnpm release-it --increment=minor",
		"release:patch": "pnpm release-it --increment=patch"
	},
	"author": "Mopsgamer",
	"license": "ISC",
	"main": "./lib/index.js",
	"files": [
		"lib"
	],
	"release-it": {
		"hooks": {
			"before:init": "pnpm prerelease"
		},
		"plugins": {
			"@release-it/keep-a-changelog": {
				"filename": "CHANGELOG.md"
			}
		},
		"github": {
			"release": true,
			"draft": true,
			"releaseName": "${version}"
		},
		"npm": {
			"publish": true
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"directories": {
		"test": "test"
	},
	"dependencies": {
		"chalk": "^5.3.0",
		"commander": "^12.1.0",
		"fast-glob": "^3.3.2",
		"get-value": "^3.0.1",
		"ignore": "^5.3.1",
		"jsonify-paths": "^1.1.0",
		"minimatch": "^9.0.4",
		"properties": "^1.2.1",
		"treeify": "^1.1.0",
		"tslib": "^2.6.3"
	},
	"devDependencies": {
		"@eslint/js": "^9.4.0",
		"@release-it/keep-a-changelog": "^5.0.0",
		"@types/get-value": "^3.0.5",
		"@types/mocha": "^10.0.6",
		"@types/mock-fs": "^4.13.4",
		"@types/node": "^20.14.2",
		"@types/treeify": "^1.0.3",
		"eslint": "^8.57.0",
		"eslint-plugin-only-warn": "^1.1.0",
		"globals": "^15.4.0",
		"mocha": "^10.4.0",
		"mock-fs": "^5.2.0",
		"release-it": "^17.3.0",
		"tsx": "^4.13.3",
		"typescript": "^5.4.5",
		"typescript-eslint": "^7.12.0"
	},
	"keywords": [
		"tree",
		"ignore",
		"gitignore",
		"npmignore",
		"dockerignore",
		"cli",
		"fs",
		"file-system",
		"output",
		"project",
		"migration"
	]
}
