{
	"name": "view-ignored",
	"version": "0.1.1",
	"description": "Retrieve list of files ignored/included by Git, NPM, Yarn and VSC Extension.",
	"type": "module",
	"bin": {
		"viewig": "./bin/viewig",
		"view-ignored": "./bin/viewig"
	},
	"scripts": {
		"prerelease": "pnpm lint && pnpm build:pub && pnpm test",
		"postinstall": "pnpm run build",
		"test": "pnpm mocha ./out/test/**/*.test.js",
		"build": "pnpm shx rm -rf out && pnpm tsc",
		"build:pub": "pnpm shx rm -rf out && pnpm tsc --sourceMap false",
		"build:watch": "pnpm tsc --watch",
		"lint": "pnpm eslint .",
		"lint:fix": "pnpm eslint . --fix",
		"release:major": "pnpm release-it --increment=major",
		"release:minor": "pnpm release-it --increment=minor",
		"release:patch": "pnpm release-it --increment=patch"
	},
	"author": "Mopsgamer",
	"license": "ISC",
	"main": "./lib/src/index.js",
	"files": [
		"out/src"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/Mopsgamer/view-ignored.git"
	},
	"bugs": {
		"url": "https://github.com/Mopsgamer/view-ignored/issues"
	},
	"homepage": "https://github.com/Mopsgamer/view-ignored",
	"release-it": {
		"hooks": {
			"before:init": "pnpm prerelease"
		},
		"plugins": {
			"@release-it/keep-a-changelog": {
				"filename": "CHANGELOG.md"
			}
		},
		"github": {
			"release": true,
			"draft": true,
			"releaseName": "${version}"
		},
		"npm": {
			"publish": true
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"directories": {
		"lib": "lib"
	},
	"dependencies": {
		"arrify": "^3.0.0",
		"chalk": "^5.3.0",
		"commander": "^12.1.0",
		"fast-glob": "^3.3.2",
		"get-value": "^3.0.1",
		"ignore": "^5.3.1",
		"is-installed-globally": "^1.0.0",
		"jsonify-paths": "^1.1.0",
		"load-plugin": "^6.0.3",
		"minimatch": "^10.0.1",
		"properties": "^1.2.1",
		"treeify": "^1.1.0",
		"tslib": "^2.6.3"
	},
	"devDependencies": {
		"@eslint/js": "^9.4.0",
		"@release-it/keep-a-changelog": "^5.0.0",
		"@types/get-value": "^3.0.5",
		"@types/mocha": "^10.0.6",
		"@types/node": "^20.14.2",
		"@types/treeify": "^1.0.3",
		"eslint": "^8.57.0",
		"eslint-plugin-only-warn": "^1.1.0",
		"fs-fixture": "^2.4.0",
		"globals": "^15.4.0",
		"mocha": "^10.4.0",
		"release-it": "^17.3.0",
		"shx": "^0.3.4",
		"ts-node": "^10.9.2",
		"typescript": "^5.4.5",
		"typescript-eslint": "^7.13.0"
	},
	"keywords": [
		"tree",
		"ls-tree",
		"ignore",
		"gitignore",
		"npmignore",
		"vscodeignore",
		"cli",
		"fs",
		"file-system",
		"output",
		"project",
		"migration"
	]
}
